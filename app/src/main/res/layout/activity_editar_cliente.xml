<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditarCliente">

    <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCancelarClie" android:layout_marginTop="476dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btGuardarClie" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGuardarClie" android:layout_marginTop="476dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.345"/>
    <TextView
            android:text="Dirección:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView41" android:layout_marginTop="360dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:textSize="20sp"
            android:textColor="#2196F3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Direccion" android:layout_marginTop="384dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Nombre:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView40" android:layout_marginTop="156dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:textSize="20sp"
            android:textColor="#2196F3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/Telefono" android:layout_marginTop="316dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Teléfono:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView39" android:layout_marginTop="292dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:textSize="20sp"
            android:textColor="#2196F3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/ApellidoCliente" android:layout_marginTop="248dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Apellido:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView38" android:layout_marginTop="224dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:textSize="20sp"
            android:textColor="#2196F3"/>
    <TextView
            android:text="Codigo Cliente:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView34" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:textSize="20sp"
            android:textColor="#2196F3"/>
    <EditText
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CodigoClie" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="216dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/NombreCliente" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Editar Datos de Cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:fontFamily="casual"
            android:textSize="24sp" android:textColor="#2196F3"/>

</androidx.constraintlayout.widget.ConstraintLayout>