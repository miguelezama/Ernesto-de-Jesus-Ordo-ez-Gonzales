<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroVenta">

    <TextView
            android:text="Monto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25" android:layout_marginTop="264dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:textSize="20sp"
            android:textColor="#2196F3" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"/>
    <TextView
            android:text="Producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView42" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:textSize="20sp"
            android:textColor="#2196F3" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"/>
    <TextView
            android:text="Cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:textColor="#2196F3" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.118"/>
    <TextView
            android:text="Registro de Venta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:fontFamily="casual"
            android:textSize="24sp" android:textColor="#2196F3"/>
    <Spinner
            android:layout_width="267dp"
            android:layout_height="26dp"
            android:id="@+id/spProducto" android:layout_marginTop="212dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.36"/>
    <Spinner
            android:layout_width="267dp"
            android:layout_height="26dp"
            android:id="@+id/spCliente"
            android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" app:layout_constraintHorizontal_bias="0.36" android:scrollbarSize="4dp"/>
    <EditText
            android:layout_width="144dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/MontoVenta" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="256dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.649"/>
    <Button
            android:text="GUARDAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btGuardarVenta" android:layout_marginTop="360dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.351"/>
    <Button
            android:text="CANCELAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btCancelarVenta" android:layout_marginTop="360dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btGuardarVenta"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>